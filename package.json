{
  "name": "erra",
  "version": "0.1.0",
  "description": "mock工具",
  "repository": "https://github.com/hughfenghen/Erra",
  "keywords": [
    "mock",
    "debug",
    "breakpoint",
    "http"
  ],
  "main": "",
  "bin": "./bin/index.sh",
  "author": "fenghen",
  "license": "MIT",
  "scripts": {
    "server": "nodemon --watch 'src/**/*.ts' --ignore 'test/**/*.test.ts' --exec node --inspect -r ts-node/register ./src/server/index.ts  -c ./example/erra.config.yaml",
    "client": "parcel ./src/client/index.html --cert ./ca/erra.crt.pem --key ./ca/erra.key.pem",
    "test:watch": "jest --watch",
    "test": "jest",
    "prebuild": "yarn run test",
    "build": "tsc ./lib/index.ts --declaration",
    "prepublishOnly": "yarn run build"
  },
  "dependencies": {
    "@types/lodash": "^4.14.132",
    "antd": "^3.23.6",
    "brace": "^0.11.1",
    "es6-promisify": "^6.0.2",
    "events": "^3.0.0",
    "http-proxy": "^1.17.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "mockjs": "^1.0.1-beta3",
    "node-http-proxy-text": "git+https://github.com/hughfenghen/node-http-proxy-text.git",
    "pem": "^1.14.2",
    "react": "^0.13.0 || ^0.14.0 || ^15.0.1 || ^16.0.0",
    "react-ace": "^7.0.4",
    "react-dom": "^0.13.0 || ^0.14.0 || ^15.0.1 || ^16.0.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/http-proxy": "^1.17.0",
    "@types/jest": "^24.0.13",
    "@types/koa": "^2.0.49",
    "@types/mockjs": "^1.0.2",
    "@types/node": "^12.0.2",
    "@types/socket.io": "^2.1.2",
    "autoprefixer": "^9.6.1",
    "babel-jest": "^24.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "jest": "^24.8.0",
    "less": "^3.10.3",
    "nodemon": "^1.19.2",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "postcss-modules": "^1.4.1",
    "ts-node": "^8.1.1",
    "typescript": "^3.4.5",
    "typescript-plugin-css-modules": "^1.2.1"
  }
}
